doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
        title= title
        link(href='http://static.laobian.me/lib/bootstrap/3.3.6/bootswatch/paper.min.css', rel='stylesheet')
        link(href='http://static.laobian.me/lib/font-awesome/4.5.0/css/font-awesome.min.css', rel='stylesheet')
        
        link(href='/assets/style.css', rel='stylesheet')
    body
        div(class='container-fluid')
            nav(class='navbar navbar-default')
                div(class='container')
                    div(class='navbar-header')
                        button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#target')
                            span(class='sr-only') Toggle navigation
                            span(class='icon-bar')
                            span(class='icon-bar')
                            span(class='icon-bar')
                        a(class='navbar-brand' href='/') Jerry Bian's blog
                        p(class='navbar-text') Programming, Cooking & Living

                    div(class='collapse navbar-collapse' id='target')
                        ul(class='nav navbar-nav navbar-right')
                            li
                                a(href='/rss')
                                    i(class='fa fa-rss')
                                    
            div(class='container')
                div(class='row')
                    div(class='col-md-8')
                        block content
                    div(class='col-md-4 hidden-sm hidden-xs')
                        aside
                            section
                                div(class='panel panel-default')
                                    div(class='panel-heading') ABOUT
                                    div(class='panel-body')
                                        p 卞良忠(a.k.a Jerry Bian).
                            if tweets
                                section
                                    div(class='panel panel-default')
                                        div(class='panel-heading') LATEST TWEETS
                                        div(class='panel-body')
                                            ul
                                                each item in tweets
                                                    li 
                                                        p #{item.text}
                                                        small #{item.created_at} · from 
                                                            span!= item.source
                            section
                                div(class='panel panel-default')
                                    div(class='panel-heading') LATEST POSTS
                                    div(class='panel-body')
                                        ul
                                            each item in latest
                                                li 
                                                    p 
                                                        a(href=item.url) #{item.title}
                                                    small #{item.createdAt} · #{item.visits} visits
            
            footer(class='container')
                p &copy; Jerry Bian
        
        
        script(type='text/javascript' src='http://static.laobian.me/lib/jquery/2.2.2/jquery.min.js')
        script(type='text/javascript' src='http://static.laobian.me/lib/bootstrap/3.3.6/js/bootstrap.min.js')
        
        block scripts