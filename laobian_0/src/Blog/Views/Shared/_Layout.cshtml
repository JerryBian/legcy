<!DOCTYPE html>
<html>
<head>
    @Html.Partial("_Head")
</head>
<body>
    <div class="container-fluid m-0 p-0">
        @Html.Partial("_Navbar")

        <div class="container p-1" id="main">
            <div class="row">
                <main class="col-sm-9">
                    @RenderBody()
                </main>
                <aside class="col-sm-3 d-md-block">

                    <div class="card mb-3" style="width: 100%;">
                        <div class="card-header">About</div>
                        <div class="card-body">
                            <p class="card-text">Jerry Bian, Chinese software engineer, living at Hangzhou.</p>
                            <a href="/about" class="btn btn-outline-secondary btn-block">More about me</a>
                        </div>
                    </div>

                    @await Component.InvokeAsync("RandomPost", (RandomPostFactor)Context.Items[RandomPostFactor.ItemKey])

                    @RenderSection("sidebar", false)

                    <div class="card mb-3" style="width: 100%;">
                        <div class="card-header">Declaimer</div>
                        <div class="card-body">
                            <p class="card-text">Everything expressed herein are totally my own and do not represent my employer's view in any way.</p>
                        </div>
                    </div>
                </aside>
            </div>
        </div>

        @Html.Partial("_Footer")
    </div>

    <environment names="Production">
        <script src="~/script.min.js" asp-append-version="true" async asp-fallback-src="https://laobian.blob.core.windows.net/share/script.min.js" asp-fallback-test="window.jQuery"></script>
    </environment>

    <environment names="Development">
        <script type="text/javascript" src="~/lib/jquery.js"></script>
        <script type="text/javascript" src="~/lib/selectize/selectize.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/popper.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/bootstrap.js"></script>
        <script type="text/javascript" src="~/lib/highlight/highlight.pack.js"></script>
        <script type="text/javascript" src="~/lib/anchor.js"></script>
        <script type="text/javascript" src="~/custom/js/script.js"></script>
    </environment>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-97849167-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() { dataLayer.push(arguments); }

        gtag('js', new Date());

        gtag('config', 'UA-97849167-1');
    </script>

</body>
</html>