@model BlogPost

<script src='https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.4/MathJax.js?config=TeX-MML-AM_CHTML' async></script>
<article class="post" id="post_detail">
    <h2>
        @Model.Title
    </h2>
    @*<span class="text-muted">@Model.CreateAt.ToRelativeTime()</span>*@
    <div>
        @Html.Raw(Model.Html)
    </div>
</article>

<input type="hidden" id="url" value="@Model.GetFullUrl()"/>

@section sidebar{
    <div class="card mb-3 position-sticky" id="post_metadata">
        <div class="card-body">
            <div class="card-text">
                <table>
                    <tr>
                        <td>viewed</td>
                        <td>@Model.Visit times</td>
                    </tr>
                    <tr>
                        <td>created</td>
                        <td>@Model.CreateAt.ToRelativeTime()</td>
                    </tr>
                    <tr>
                        <td>updated</td>
                        <td>@Model.LastUpdateAt.ToRelativeTime()</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="card mb-3 position-sticky" style="width: 100%;">
        <div class="card-header">License</div>
        <div class="card-body">
            <p>
                <a href="https://creativecommons.org/licenses/by/4.0/deed.en">Attribution 4.0 International (CC BY 4.0)</a>
            </p>
            <p>
                <a href="https://creativecommons.org/licenses/by/4.0/deed.zh">署名 4.0 国际 (CC BY 4.0)</a>
            </p>
        </div>
    </div>
}